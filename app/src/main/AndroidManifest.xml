<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beseated">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeSeated">
        <activity
            android:name=".SplashScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PastBookings"
            android:exported="true" />
        <activity
            android:name=".Booking"
            android:exported="true"></activity>
        <activity
            android:name=".Details"
            android:exported="true"></activity>
        <activity
            android:name=".Auth.ForgotPassword"
            android:exported="true"></activity>
        <activity
            android:name=".Auth.Verification"
            android:exported="true"></activity>
        <activity
            android:name=".Auth.SignIn"
            android:exported="true"></activity>
        <activity
            android:name=".Auth.SignUp"
            android:exported="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>